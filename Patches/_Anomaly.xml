<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anomaly</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Ghoul Gene Patch-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/MutantDef[defName="Ghoul"]/disablesGenes</xpath>
					<value>
						<li>Eyes_Arellian</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Ghoul Gene Patch-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/FactionDef[defName="CFAR_Empire"]</xpath>
					<value>
						<fixedIdeo>true</fixedIdeo>
						<ideoName>The Imperial Codex</ideoName>
						<ideoDescription>The Imperial Codex establishes rank through war and unites the Arellian Empire as one. Only officers may become nobles, and under the Empressâ€™ command, endless conquest is the only honorable life. Obedience is absolute, retreat is treason, and the stars exist to be ruled by the Imperial Fleet.\n\nGlory to the Empire!</ideoDescription>
						<deityPresets>
							<li>
								<nameType>
									<name>Aria Erisis</name><type>Empress of Steel</type>
								</nameType>
								<gender>Female</gender>
								<iconPath>UI/Deities/DeityGeneric</iconPath>
							</li>
						</deityPresets>
						<styles>
							<li>CFAR_Style</li>
						</styles>
						<forcedMemes>
							<li>Collectivist</li>
						</forcedMemes>
						<structureMemeWeights>
							<Structure_Ideological>1</Structure_Ideological>
						</structureMemeWeights>
						<disallowedPrecepts>
							<li>Charity_Essential</li>
							<li>Charity_Important</li>
							<li>Charity_Worthwhile</li>
				
							<li>AutonomousWeapons_Prohibited</li>
							<li>AutonomousWeapons_Horrible</li>
							<li>AutonomousWeapons_Disapproved</li>
				
							<li>DrugUse_Prohibited</li>
							<li>DrugUse_MedicalOnly</li>
							<li>DrugUse_MedicalOrSocial</li>
				
							<li>Cannibalism_Acceptable</li>
							<li>Cannibalism_Preferred</li>
				
							<li>Nudity_Male_UncoveredGroinDisapproved</li>
							<li>Nudity_Male_UncoveredGroinChestOrHairDisapproved</li>
							<li>Nudity_Male_UncoveredGroinChestHairOrFaceDisapproved</li>
							<li>Nudity_Female_UncoveredGroinChestOrHairDisapproved</li>
							<li>Nudity_Female_UncoveredGroinChestHairOrFaceDisapproved</li>
							<li>ApparelDesired_Strong_Subordinate</li>
							<li>ApparelDesired_Soft_Subordinate</li>
						</disallowedPrecepts>
					</value>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Biotech</li>
					</mods>
					<match Class="PatchOperationAdd">
						<xpath>Defs/FactionDef[defName="CFAR_Empire"]/disallowedPrecepts</xpath>
						<value>
							<li>Bloodfeeders_Revered</li>
							<li>ChildLabor_Encouraged</li>
							<li>GrowthVat_Prohibited</li>
							<li>MechanoidLabor_Enhanced</li>
							<li>PreferredXenotype</li>
						</value>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
