<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--QuestHelperKind-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/QuestScriptDef[defName="Util_ChooseRandomQuestHelperKind"]/root/nodes/li[1]/choices</xpath>
					<value>
						<li>
							<factionDef>CFAR_Empire</factionDef>
							<pawnKinds>
								<li>CFAR_Trooper</li>
								<li>CFAR_HeavyTrooper</li>
								<li>CFAR_SniperTrooper</li>
								<li>CFAR_ShockTrooper</li>
							</pawnKinds>
						</li>
					</value>
				</li>
				<!--QuestLodgerKind-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/QuestScriptDef[defName="Util_ChooseRandomQuestLodgerKind"]/root/nodes/li[1]/node/choices</xpath>
					<value>
						<li>
							<factionDef>CFAR_Empire</factionDef>
							<pawnKinds>
								<li>CFAR_Lieutenant</li>
								<li>CFAR_Commander</li>
								<li>CFAR_Captain</li>
							</pawnKinds>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>