			<uiPosition>(1,0)</uiPosition>
			<royalAid>
				<itemsToDrop>
					<MedicineIndustrial>20</MedicineIndustrial>
				</itemsToDrop>
			</royalAid>
		</RoyalTitlePermitDef>

	<!--======== Refresher Package - nnn ========-->

		<RoyalTitlePermitDef ParentName="CFAR_DropResources" MayRequire="Ludeon.RimWorld.Royalty">
			<defName>CFAR_DropRefresher</defName>
			<label>call refresher drop</label>
			<description>Call for a drop of nn WIP.</description>
			<uiPosition>(2,0)</uiPosition>
			<royalAid>
				<itemsToDrop>
					<MealSurvivalPack>10</MealSurvivalPack>
