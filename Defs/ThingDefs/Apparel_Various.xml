<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--================ Tailor Bench ================-->

<!--======== Officer Uniform ========-->

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_CFAR_OfficerUniform</defName>
		<label>officer uniform</label>
		<description>WIP</description>
		<recipeMaker>
			<displayPriority>240</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/OfficerUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2</Mass>
			<StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Hands</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/OfficerUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<tags>
				<li>Robe</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options><li><only>(1,1,1)</only></li></options>
		</colorGenerator>
		<possessionCount>1</possessionCount>
		<tradeTags>
			<li>BasicClothing</li>
		</tradeTags>
	</ThingDef>

<!--================ Fabrication Bench ================-->

<!--======== Trooper Armor ========-->

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<techLevel>Spacer</techLevel>
		<defName>Apparel_CFAR_TrooperHelmet</defName>
		<label>trooper helmet</label>
		<description>WIP</description>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>CFAR_TrooperArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<displayPriority>1170</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/TrooperArmor/Helmet/Helmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>17500</WorkToMake>
			<MaxHitPoints>335</MaxHitPoints>
			<Mass>1.75</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.95</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.43</ArmorRating_Blunt>
			<ArmorRating_Heat>0.50</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.69</VacuumResistance>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.10</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costList>
			<Chemfuel>10</Chemfuel>
			<Plasteel>35</Plasteel>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<wearPerDay>0.01</wearPerDay>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/TrooperArmor/Helmet/Helmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>CFAR_TrooperArmor</li>
			</tags>
			<forceEyesVisibleForRotations>
				<li>1</li>
				<li>2</li>
				<li>3</li>
			</forceEyesVisibleForRotations>
			<defaultOutfitTags>
				<li>Soldier</li>
				<li>Spacefarer</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li><only>(255,255,255)</only></li>
				<li><only>(100,100,100)</only></li>
			</options>
		</colorGenerator>
		<tradeTags>
			<li>CFAR_Armor_Fed</li>
		</tradeTags>
	</ThingDef>

