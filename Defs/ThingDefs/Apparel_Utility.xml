			<layers>
				<li>Belt</li>
			</layers>
			<tags>
				<li>CFAR_TDBelt</li>
			</tags>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<abilities>
				<li>CFAR_ThermalDetonator</li>
			</abilities>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options><li><only>(1,1,1)</only></li></options>
		</colorGenerator>
		<allowedArchonexusCount>1</allowedArchonexusCount>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>

