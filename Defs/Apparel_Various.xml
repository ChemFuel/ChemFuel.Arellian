	</ThingDef>

<!--======== Reichswehr Plate ========-->

	<ThingDef ParentName="CFAR_RWSetBase">
		<defName>Apparel_CFAR_RWPlate</defName>
		<label>Arellian Reichswehr plate</label>
		<description>A standard torso armor built on a flexible plasteel frame. Reinforced plates protect the upper body while preserving mobility. Designed as the upper component of a tactical plate set that moves seamlessly with the wearer.</description>
		<recipeMaker>
			<displayPriority>1163</displayPriority>
		</recipeMaker>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<costStuffCount>45</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<equippedStatOffsets>
			<MoveSpeed>-0.06</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
		</apparel>
	</ThingDef>

