<!--======== Reichswehr Armor Base ========-->

	<ThingDef Name="CFAR_RWSetBase" ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<costStuffCount>45</costStuffCount>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.4</Flammability>
			<StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0.30</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
			<ArmorRating_Heat>0.15</ArmorRating_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<StaggerDurationFactor>-0.1</StaggerDurationFactor>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<apparel>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryPlanetary</li>
				<li>CFAR_MilitaryOrbit</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<ideoDesireAllowedFactionCategoryTags><li>CFAR_Empire</li></ideoDesireAllowedFactionCategoryTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	    <tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>

<!--======== Reichswehr Pauldron ========-->

	<ThingDef ParentName="CFAR_RWSetBase">
		<defName>Apparel_CFAR_RWPauldrons</defName>
		<label>Arellian Reichswehr pauldrons</label>
		<description>A standard shoulder armor built on a flexible plasteel frame. Reinforced plates protect the neck and shoulders while preserving arm mobility. Designed as the shoulder component of a tactical plate set that moves seamlessly with the wearer.</description>
		<recipeMaker>
			<displayPriority>220</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<costList Inherit="False">
			<Plasteel>5</Plasteel>
		</costList>
		<costStuffCount>20</costStuffCount>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>75</MaxHitPoints>
			<Mass>4</Mass>
			<EquipDelay>0.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<StaggerDurationFactor>-0.05</StaggerDurationFactor>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulder</li>
			</bodyPartGroups>
		</apparel>
	</ThingDef>

