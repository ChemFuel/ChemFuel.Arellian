<!--======== Field Uniform ========-->

	<ThingDef ParentName="ApparelMakeableBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_FieldUniform</defName>
		<label>Arellian field uniform</label>
		<description>WIP</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>1172</displayPriority>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>1.5</Mass>
			<StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryPlanetary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--======== Orbit Suit ========-->

	<ThingDef ParentName="ArmorMachineableBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_OrbitSuit</defName>
		<label>Arellian orbit suit</label>
		<description>Designed as an under-armor garment, the orbit suit offers minimal physical defense but effective insulation against extreme temperatures and atmospheric hazards. The plasteel filaments provide vacuum protection, allowing the wearer to operate in depressurized environments.</description>
		<recipeMaker>
			<researchPrerequisites>
				<li>ComplexClothing</li>
				<li>OrbitalTech</li>
			</researchPrerequisites>
			<displayPriority>1171</displayPriority>
			<useIngredientsForColor>false</useIngredientsForColor>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>15000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>1.5</Mass>
			<Flammability>0.6</Flammability>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.5</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
			<Insulation_Cold>15</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>9</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.03</MoveSpeed>
			<ToxicEnvironmentResistance>0.22</ToxicEnvironmentResistance>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.32</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryOrbit</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
				<li>Spacefarer</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--================ Industrial Armor ================-->
<!--Dev Log: Listen, what if we made Middle layer armor...modular? Chest armor, Shoulder pads, Greaves.-->
	<ThingDef ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_RWPlate</defName>
		<label>Arellian Reichswehr plate</label>
		<description>WIP</description>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
			<Crafting>4</Crafting>
			</skillRequirements>
			<displayPriority>220</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.36</ArmorRating_Blunt>
			<ArmorRating_Heat>0.27</ArmorRating_Heat>
			<Insulation_Cold>1</Insulation_Cold>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.12</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<costList>
			<Cloth>30</Cloth>
			<Steel>60</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryPlanetary</li>
				<li>CFAR_MilitaryOrbit</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	    <tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>
</Defs>
