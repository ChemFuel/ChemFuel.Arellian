<Defs>
<!--================ Industrial Apparel ================-->

<!--======== Field Headgear(Soft) Base ========-->

	<ThingDef ParentName="HatMakeableBase" Name="CFAR_CapBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<uiIconScale>1.15</uiIconScale>
		<costStuffCount>50</costStuffCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>4000</WorkToMake>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<SuppressionPower MayRequire="Ludeon.RimWorld.Ideology">0.1</SuppressionPower>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<tags>
				<li>CFAR_MilitaryPlanetary</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--======== Field Cap ========-->

	<ThingDef ParentName="CFAR_CapBase">
		<defName>Apparel_CFAR_FieldCap</defName>
		<label>Arellian field cap</label>
		<description>A standard field cap issued to Reichswehr enlisted personnel. Lightweight, brimmed, and built for daily operations, it shields the wearer’s eyes during maneuvers and long marches. Worn universally by the imperial rank-and-file.</description>
		<recipeMaker>
			<displayPriority>1160</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldCap/Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<equippedStatOffsets>
			<PainShockThreshold>0.10</PainShockThreshold>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldCap/Hat</wornGraphicPath>
			<tags>
				<li>CFAR_Soldier</li>
			</tags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
	</ThingDef>

<!--======== Field Kepi ========-->

	<ThingDef ParentName="CFAR_CapBase">
		<defName>Apparel_CFAR_FieldKepi</defName>
		<label>Arellian field kepi</label>
		<description>A structured field cap issued to Reichswehr junior officers. Its rigid profile identifies small-unit commanders during active operations and serves as the formal marker of low-tier leadership within imperial forces.</description>
		<recipeMaker>
			<displayPriority>1161</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<equippedStatOffsets>
			<SocialImpact>0.10</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</wornGraphicPath>
			<tags>
				<li>CFAR_OfficerLow</li>
			</tags>
			<ideoDesireAllowedFactionCategoryTags><li>CFAR_Empire</li></ideoDesireAllowedFactionCategoryTags>
		</apparel>
	</ThingDef>

<!--======== Field Peaked Cap ========-->

	<ThingDef ParentName="CFAR_CapBase">
		<defName>Apparel_CFAR_FieldCrusher</defName>
		<label>Arellian field crusher</label>
		<description>A soft peaked cap once worn by experienced field officers, now worn as a traditional mark of command. Its distinctive profile signals senior authority within Reichswehr units.</description>
		<recipeMaker>
			<displayPriority>1162</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<equippedStatOffsets>
			<SocialImpact>0.20</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</wornGraphicPath>
			<tags>
				<li>CFAR_OfficerHigh</li>
			</tags>
			<ideoDesireAllowedFactionCategoryTags><li>CFAR_Empire</li></ideoDesireAllowedFactionCategoryTags>
		</apparel>
	</ThingDef>

