<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!--================ Industrial Apparel ================-->

<!--======== Service Uniform ========-->

	<ThingDef ParentName="ApparelMakeableBase" Name="CFAR_UniformBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_ServiceUniform</defName>
		<label>Arellian service uniform</label>
		<description>WIP</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>1172</displayPriority>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/ServiceUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>1.25</Mass>
			<StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.75</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<EquipDelay>6</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/ServiceUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryPlanetary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--======== Orbit Suit ========-->

	<ThingDef ParentName="ArmorMachineableBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_OrbitSuit</defName>
		<label>Arellian orbit suit</label>
		<description>Designed as an under-armor garment, the orbit suit offers minimal physical defense but effective insulation against extreme temperatures and atmospheric hazards. The plasteel filaments provide vacuum protection, allowing the wearer to operate in depressurized environments.</description>
		<recipeMaker>
			<researchPrerequisites>
				<li>ComplexClothing</li>
				<li>OrbitalTech</li>
			</researchPrerequisites>
			<displayPriority>1160</displayPriority>
			<useIngredientsForColor>false</useIngredientsForColor>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Plasteel>20</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>16000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0.6</Flammability>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.75</StuffEffectMultiplierInsulation_Heat>
			<Insulation_Cold>30</Insulation_Cold>
			<Insulation_Heat>15</Insulation_Heat>
			<EquipDelay>8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.03</MoveSpeed>
			<ToxicEnvironmentResistance>0.20</ToxicEnvironmentResistance>
			<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.32</VacuumResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryOrbit</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
				<li>Spacefarer</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

<!--================ Industrial Armor ================-->

<!--======== Service Armor Base ========-->

	<ThingDef Name="CFAR_ArmorBase" ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<Flammability>0.4</Flammability>
			<StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0.30</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
			<ArmorRating_Heat>0.15</ArmorRating_Heat>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	    <tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>

<!--======== Service Armor - Universal ========-->

	<ThingDef ParentName="CFAR_ArmorBase">
		<defName>Apparel_CFAR_ServiceArmor</defName>
		<label>Arellian service armor</label>
		<description>Reinforced by a plasteel exoskeleton, the Arellian service armor is designed to balance protection and mobility, preserving freedom of movement during sustained combat.</description>
		<recipeMaker>
			<displayPriority>1163</displayPriority>
		</recipeMaker>
		<costList>
			<Plasteel>30</Plasteel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<costStuffCount>95</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>7</Mass>
			<EquipDelay>8.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<StaggerDurationFactor>-0.20</StaggerDurationFactor>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<MoveSpeed>-0.06</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
			<tags>
				<li>CFAR_Soldier</li>
				<li>CFAR_Officer</li>
				<li>CFAR_HighOfficer</li>
			</tags>
		</apparel>
	</ThingDef>

<!--======== Service Pauldrons - Soldier ========-->

	<ThingDef ParentName="CFAR_ArmorBase" Name="CFAR_PauldronBase">
		<defName>Apparel_CFAR_ServicePauldrons</defName>
		<label>Arellian service pauldrons</label>
		<description>A plasteel-reinforced soldier's pauldron designed to integrate with Arellian service armor. It protects the wearer’s shoulders while preserving freedom of movement during sustained combat.</description>
		<recipeMaker>
			<displayPriority>1164</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Plasteel>5</Plasteel>
		</costList>
		<costStuffCount>10</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>50</MaxHitPoints>
			<Mass>0.5</Mass>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<StaggerDurationFactor>-0.05</StaggerDurationFactor>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
			<tags>
				<li>CFAR_Soldier</li>
			</tags>
		</apparel>
	</ThingDef>

<!--======== Officer Pauldrons - Officer(Low) ========-->

	<ThingDef ParentName="CFAR_PauldronBase">
		<defName>Apparel_CFAR_OfficerPauldrons</defName>
		<label>Arellian officer pauldrons</label>
		<description>A plasteel-reinforced officer's pauldron designed to integrate with Arellian service armor. It protects the wearer’s shoulders and serves as an indicator of authority in the field.</description>
		<recipeMaker>
			<displayPriority>1165</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
			<tags Inherit="False">
				<li>CFAR_Officer</li>
			</tags>
		</apparel>
	</ThingDef>

<!--======== Commander Pauldrons - Officer(High) ========-->

	<ThingDef ParentName="CFAR_PauldronBase">
		<defName>Apparel_CFAR_CommanderPauldrons</defName>
		<label>Arellian commander pauldrons</label>
		<description>A plasteel-reinforced senior officer’s pauldron designed to integrate with Arellian service armor. It provides focused shoulder protection while serving as an indicator of command authority in the field.</description>
		<recipeMaker>
			<displayPriority>1166</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
			<tags Inherit="False">
				<li>CFAR_HighOfficer</li>
			</tags>
		</apparel>
	</ThingDef>
</Defs>

