<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!--================ Industrial Apparel ================-->

<!--======== Field Cap & Field Kepi ========-->

	<ThingDef ParentName="HatMakeableBase" Name="CFAR_CapBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<uiIconScale>1.15</uiIconScale>
		<costStuffCount>50</costStuffCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>4000</WorkToMake>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<SuppressionPower MayRequire="Ludeon.RimWorld.Ideology">0.1</SuppressionPower>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<ideoDesireAllowedFactionCategoryTags><li>CFAR_Empire</li></ideoDesireAllowedFactionCategoryTags>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<tags>
				<li>CFAR_MilitaryBasic</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

	<ThingDef ParentName="CFAR_CapBase">
		<defName>Apparel_CFAR_FieldCap</defName>
		<label>Arellian field cap</label>
		<description>WIP</description>
		<recipeMaker>
			<displayPriority>1170</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldCap/Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<thingCategories Inherit="False">
			<li>HeadgearNoble</li>
		</thingCategories>
		<equippedStatOffsets>
			<PainShockThreshold>0.10</PainShockThreshold>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldCap/Hat</wornGraphicPath>
			<tags>
				<li>CFAR_Soldier</li>
			</tags>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="CFAR_CapBase">
		<defName>Apparel_CFAR_FieldKepi</defName>
		<label>Arellian field kepi</label>
		<description>WIP</description>
		<recipeMaker>
			<displayPriority>1171</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<equippedStatOffsets>
			<SocialImpact>0.20</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/FieldKepi/Hat</wornGraphicPath>
			<tags>
				<li>CFAR_Officer</li>
			</tags>
		</apparel>
	</ThingDef>

<!--======== Field Uniform ========-->

	<ThingDef ParentName="ApparelMakeableBase">
		<techLevel>Industrial</techLevel>
		<defName>Apparel_CFAR_FieldUniform</defName>
		<label>Arellian field uniform</label>
		<description>WIP</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>1172</displayPriority>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
			<li>ApparelNoble</li>
		</thingCategories>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>1.5</Mass>
			<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Arellian/Apparel/FieldUniform/Apparel</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>CFAR_MilitaryBasic</li>
				<li>CFAR_Soldier</li>
				<li>CFAR_Officer</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
				<li>Spacefarer</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
			<li>CFAR_Apparel</li>
		</tradeTags>
	</ThingDef>

